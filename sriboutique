<script>
    let cartItems = 0;
    let cartTotal = 0;
    let cartList = [];




    function addToCart(item, price) {
        cartItems++;
        cartTotal += price;
        cartList.push(${item} - â‚¹${price});
        document.getElementById("cart-items").innerText = cartItems;
        document.getElementById("cart-total").innerText = cartTotal;
        alert(item + " added to cart!");
    }

    function checkout() {
        if (cartItems === 0) {
            alert("Your cart is empty!");
            return;
        }
        let message = "I want to order:\n" + cartList.join("\n") + \nTotal: â‚¹${cartTotal};
        let whatsappLink = https://wa.me/919940406369?text=${encodeURIComponent(message)};
        window.location.href = whatsappLink;
    }
</script>

